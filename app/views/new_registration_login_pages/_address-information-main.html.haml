.main
  .main-container
    .main-header
      住所入力
    .main-forms
      .main-content
        
        .main-form
          .main-form__name
            お名前
          .maim-form__name-label
          %span.name-label 必須
          .main-form__name-input
            %input.last-name{:name => "last name", :placeholder => "例）山田", :type => "name", :value => ""}/
            %input.first-name{:name => "first name", :placeholder => "例）彩", :type => "name", :value => ""}/
        
        .main-form
          .main-form__name-kana
            お名前カナ
          .maim-form__name-kana-label
          %span.name-label 必須
          .main-form__name-kana-input
            %input.last-name-kana{:name => "last name kana", :placeholder => "例）ヤマダ", :type => "name", :value => ""}/
            %input.first-name-kana{:name => "first name kana", :placeholder => "例）アヤ", :type => "name", :value => ""}/
        
        .main-form
          .maim-form__postal-code
            郵便番号
          .maim-form__postal-code-label
          %span.name-label 必須
          .maim-form__postal-code-input
            %input{:maxlength => "8", :name => "zip01", :placeholder => "例）123-4567", :onkeyup => "AjaxZip3.zip2addr(this,'','pref01','addr01');", :type => "text"}/
        
        .main-form
          .maim-form__prefectures
            都道府県
          .maim-form__prefectures-label
          %span.email-label 必須
          .maim-form__prefectures-input
            %input{:name => "pref01", :placeholder => "北海道", :type => "text"}/
        
        .main-form
          .maim-form__municipality
            市区町村
          .maim-form__municipality-label
          %span.email-label 必須
          .maim-form__municipality-label
            %input{:name => "addr01", :placeholder => "例）横浜市緑区", :type => "text"}/
        
        .main-form
          .maim-form__address
            番地
          .maim-form__address-lable
          %span.email-label 必須
          .maim-form__address-input
            %input{:name => "address", :placeholder => "例）青山1-1-1", :type => "text"}/
        
        .main-form
          .maim-form__building-name
            建物名
          .maim-form__building-name-label
          %span.email-label 任意
          .maim-form__building-name-input
            %input{:name => "building-name", :placeholder => "例）柳ビル103", :type => "text"}/
        
        .main-form
          .maim-form__phone-number
            電話番号
          .maim-form__phone-number-label
          %span.email-label 任意
          .maim-form__phone-number-input
          %input{:name => "phone-number", :placeholder => "例）09012345678", :type => "text"}/
        .main-btn
          .main-btn__next
            = link_to "次へ進む"

