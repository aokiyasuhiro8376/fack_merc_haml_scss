.main
  .main-header
  会員情報入力
  .main-form
    .main-form__nickname
    ニックネーム
    .maim-form__nickname--lavel
    必須
    .main-form__nickname--input
    %input.nickname{:name => "nickname", :placeholder => "例）メルカリ太郎", :type => "nickname", :value => ""}/
    .main-form__email
    メールアドレス
    .maim-form__email--lavel
    必須
    .main-form__email--input
    %input.email{:name => "email", :placeholder => "PC・携帯どちらでも可", :type => "email", :value => ""}/
    .main-form__password
    パスワード
    .maim-form__password--lavel
    必須
    .main-form__password--input
    %input.nickname{:name => "password", :placeholder => "６文字以上", :type => "password", :value => ""}/
    .main-form__password_confirmation
    パスワード（確認）
    .maim-form__password_confirmation--lavel
    必須
    .main-form__password_confirmation--input
    %input.nickname{:name => "password_confirmation", :placeholder => "６文字以上", :type => "password_confirmation", :value => ""}/
  .main-btn
    .main-btn__robo
      = link_to "robo"
