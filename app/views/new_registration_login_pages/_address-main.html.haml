.main
  .main-container
    .main-header
      住所入力
    .main-forms
      .main-content
        .main-form
          .main-form__label
            お名前
          %span.required 必須
          .main-form__input
            %input{:name => "last-name", :placeholder => "例）山田", :type => "name", :value => ""}/
            %input{:name => "first-name", :placeholder => "例）彩", :type => "name", :value => ""}/
        .main-form
          .main-form__label
            お名前カナ
          %span.required 必須
          .main-form__input
            %input{:name => "last-name-kana", :placeholder => "例）ヤマダ", :type => "name", :value => ""}/
            %input{:name => "first-name-kana", :placeholder => "例）アヤ", :type => "name", :value => ""}/
        .main-form
          .main-form__label
            郵便番号
          %span.required 必須
          .main-form__input
            %input{:maxlength => "8", :name => "postal-code", :placeholder => "例）123-4567", :type => "text", :value => ""}/
        .main-form
          .main-form__label
            都道府県
          %span.required 必須
          .main-form__input
            %input{:name => "prefectures", :placeholder => "北海道", :type => "text", :value => ""}/
        .main-form
          .main-form__label
            市区町村
          %span.required 必須
          .main-form__input
            %input{:name => "municipality", :placeholder => "例）横浜市緑区", :type => "text", :value => ""}/
        .main-form
          .main-form__label
            番地
          %span.required 必須
          .main-form__input
            %input{:name => "address", :placeholder => "例）青山1-1-1", :type => "text", :value => ""}/
        .main-form
          .main-form__label
            建物名
          %span.any 任意
          .main-form__input
            %input{:name => "building-name", :placeholder => "例）柳ビル103", :type => "text", :value => ""}/
        .main-form
          .main-form__label
            電話番号
          %span.any 任意
          .main-form__input
            %input{:name => "phone-number", :placeholder => "例）09012345678", :type => "text", :value => ""}/
        .main-btn
          .main-btn__next
            = link_to '次へ進む', class: "main-btn__next--red"